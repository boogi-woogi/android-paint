<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="1">

        <woowacourse.paint.PaintingView
            android:id="@+id/pv"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.8" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_colors"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.1"
            android:orientation="horizontal"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            tools:listitem="@layout/item_color" />

        <com.google.android.material.slider.RangeSlider
            android:id="@+id/rs"
            android:valueFrom="0.0f"
            android:valueTo="100.0f"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.1" />

        <LinearLayout
            android:id="@+id/ln_tools"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="1">

            <Button
                android:id="@+id/btn_pen"
                android:layout_margin="5dp"
                android:text="@string/main_pen"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.25" />

            <Button
                android:id="@+id/btn_square"
                android:layout_margin="5dp"
                android:layout_width="0dp"
                android:text="@string/main_square"
                android:layout_height="wrap_content"
                android:layout_weight="0.25" />

            <Button
                android:id="@+id/btn_circle"
                android:layout_width="0dp"
                android:layout_margin="5dp"
                android:text="@string/main_circle"
                android:layout_height="wrap_content"
                android:layout_weight="0.25" />

            <Button
                android:id="@+id/btn_erase"
                android:layout_width="0dp"
                android:layout_margin="5dp"
                android:text="@string/main_eraser"
                android:layout_height="wrap_content"
                android:layout_weight="0.25" />
        </LinearLayout>
    </LinearLayout>
</layout>